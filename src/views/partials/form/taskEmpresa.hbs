      <div class="col-sm was-validated form-floating">
        <input name="numero" type="text" class="form-control" id="numero" placeholder="Número" aria-label="Number" onkeyup="this.value=NumerosTelefono(this.value)" required>
        <label for="floatingInput">Número</label>
      </div>
