    {{!-- Header datos personales --}}
    <div class="row g-3">
      <div class="col-sm-12">
        <div class="card text-bg-secondary mb-3 align-items-center">
          <div class="card-header"> <h3>Datos de la Empresa</h3></div>
        </div>
      </div>
    </div>
    {{!-- Fila 1 - Nombre Empresa - Nombre Fantasia --}}
    <div class="row g-3 mb-4">
      {{!-- Nombre Empresa --}}
      <div class="col-sm-6 was-validated form-floating">
        <input type="text" name="nombreEmpresa" placeholder="nombreEmpresa" id="nombreEmpresa" class="form-control" disabled/>
        <label for="floatingInput">Nombre de la Empresa</label>
      </div>
      {{!-- marca o nombre de fantasia --}}
      <div class="col-sm-6 was-validated form-floating">
        <input name="nombreFantasia" type="text" class="form-control" id="nombreFantasia" placeholder="Nombre Fantasía" aria-label="Number" required>
        <label for="floatingInput">Nombre de Fantasía</label>
      </div>
    </div>
    {{!-- Fila 2 - Razon Social - CUIT --}}
    <div class="row g-3 mb-4">
      {{!-- Razon social --}}
      <div class="col-sm-6 was-validated form-floating">
        <input name="razonSocial" type="text" class="form-control" id="razonSocial" placeholder="razonSocial" required>
        <label for="floatingInput">Razon Social</label>
      </div>
      {{!-- cuil --}}
      <div class="col-sm  was-validated form-floating">
        <input name="cuil" type="text" class="form-control item" id="cuil" placeholder="Número cuit/cuil" value={{datos.usuario}} onkeyup="NumeroCuil(event, this)" maxlength="13" pattern="\d{2}-\d{8}-\d{1}" disabled >
        <label for="floatingInput">Número cuit/cuil</label>
      </div>
      {{!-- Situación AFIP --}}
      <div class="col-sm  was-validated form-floating">
        <select name="sitAfip" id="slctSitAfip" class="form-select" required>
          <option value="" disabled hidden selected>Seleccione</option>
        </select>
        <label for="floatingSelect">Situación AFIP</label>
      </div>
    </div>
    {{!-- Fila 1 - Apellido y nombre --}}
    <div class="row g-3 mb-4">
      {{!-- Apellido --}}
      <div class="col-sm-6 form-floating was-validated">
        <input type="text" name="apellido" placeholder="Apellido" id="apellido" class="form-control" required/>
        <label for="floatingInput">Apellido del responsable legal</label>
      </div>
      {{!-- Nombre --}}
      <div class="col-sm form-floating was-validated">
        <input type="text" name="nombre" placeholder="Nombres" id="nombre" class="form-control" required/>
        <label for="floatingInput">Nombre del responsable legal</label>
      </div>
    </div>
    {{!-- Fila 3 - email, cuil, sexo, repa, iaavim --}}
    <div class="row g-3 mb-4">
      {{!-- email --}}
      <div class="col-sm-4 form-floating">
        <input name="email" type="email" class="form-control" id="email" value={{datos.email}} placeholder="e-mail: nombre@ejemplo.com" disabled>
        <label for="floatingInput">e-mail</label>
      </div>
      {{!-- sexo --}}
      <div class="col-sm-2  was-validated form-floating">
        <select name="sexo" id="slctSexo" class="form-select" required>
          <option value="" disabled hidden selected>Seleccione</option>
        </select>
        <label for="floatingSelect">Género</label>
      </div>
      {{!-- Código REPA --}}
      <div class="col-sm form-floating">
        <input type="text" class="form-control" id="codRepa" placeholder="Código REPA" value={{codigoRepa}} aria-label="codRepa" disabled>
        <label for="floatingInput">Código REPA</label>
      </div>
      {{!-- Situación Iaavim --}}
      <div class="col-sm form-floating">
        <input type="text" class="form-control" id="sitIaavim" value="INACTIVO" {{!-- value={{datos.sitIaavim}} --}} placeholder="Situación IAAViM" aria-label="sitIaavim" disabled>
        <label for="floatingInput">Situación IAAViM</label>
      </div>
    </div>
    
    {{!-- Fila 5 - Telefonos --}}
    <div class="row g-3 mb-4">
      {{!-- Telefono fijo --}}
      <div class="col-sm-4 form-floating">
        <input name="telFijo" type="text" class="form-control" id="telFijo" placeholder="Teléfono Fijo" aria-label="Phone" onkeyup="this.value=NumerosTelefono(this.value)">
        <label for="floatingInput">Teléfono Fijo</label>
      </div>
      {{!-- Movil principal --}}
      <div class="col-sm-4  was-validated form-floating">
        <input name="movilPpal" type="text" class="form-control" id="movilPpal" placeholder="Móvil" aria-label="Mobile" onkeyup="this.value=NumerosTelefono(this.value)" required>
        <label for="floatingInput">Teléfono Móvil</label>
      </div>
      {{!-- Movil Alternativo --}}
      <div class="col-sm form-floating">
        <input name="movilAlt" type="text" class="form-control" id="movilAlt" placeholder="Móvil Alternativo" aria-label="SecondPhone" onkeyup="this.value=NumerosTelefono(this.value)" >
        <label for="floatingInput">Móvil Alternativo</label>
      </div>
    </div>
    {{!-- Header domicilio empresa --}}
    <div class="row g-3">
      <div class="col-sm-12">
        <div class="card text-bg-secondary mb-3 align-items-center">
          <div class="card-header"> <h3>Domicilio de la Empresa</h3></div>
        </div>
      </div>
    </div>
    {{!-- Fila 6 - Localidad, Departamento, Distrito CP--}}
