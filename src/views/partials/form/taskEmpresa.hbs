        <input name="piso" type="text" class="form-control" id="piso" placeholder="Piso" aria-label="Floor">
        <label for="floatingInput">Piso</label>
      </div>
      {{!-- Depto --}}
      <div class="col-sm form-floating">
        <input name="dpto" type="text" class="form-control" id="dpto" placeholder="Dpto" aria-label="Depto">
        <label for="floatingInput">Dpto</label>
