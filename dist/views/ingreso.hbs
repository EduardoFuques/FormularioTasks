  {{!-- Form --}}
  <div class="row justify-content-center align-items-center"><div class="col-md-6">

    <form "/signin" method="post" >
      <div class="mb-3">
        <input type="text" name="usuario" placeholder="Usuario (DNI sin puntos)" class="form-control rounded-0 bg-white text-dark" onkeyup="this.value=Numeros(this.value)" autofocus>
      </div>
      <div class="input-group mb-3">
        <input id="passInput" type="password" name="password" placeholder="Contraseña" class="form-control rounded-0 bg-white text-dark">
        <div class="input-group-append">
          <span class="input-group-text" id="passwordEye">
            <i class="fa fa-eye-slash"></i>
          </span>
        </div>
      </div>
      <button class="btn btn-secondary"> Ingresar</button>
    </form>
    <pre>
        
    </pre>
  </div>
  {{ terminosycondiciones}}
</div>

<script>
  function Numeros(string){//Solo numeros
    var out = '';
    var filtro = '1234567890';//Caracteres validos
	
    //Recorrer el texto y verificar si el caracter se encuentra en la lista de validos 
    for (var i=0; i<string.length; i++)
       if (filtro.indexOf(string.charAt(i)) != -1) 
             //Se añaden a la salida los caracteres validos
	     out += string.charAt(i);
	
    //Retornar valor filtrado
    return out;
  }

  const PassBtn = document.querySelector('#passwordEye');
  const input = document.querySelector('#passInput');
  PassBtn.addEventListener('click', () => {
      input.getAttribute('type') === 'password' ? input.setAttribute('type', 'text') : input.setAttribute('type', 'password');
      PassBtn.innerHTML = input.getAttribute('type') === 'text' ? '<i class="fa fa-eye"></i>' : '<i class="fa fa-eye-slash"></i>';
  });
</script>